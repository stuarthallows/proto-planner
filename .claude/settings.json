{
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/hook-handler.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/hook-handler.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit|TodoWrite|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/hook-handler.py"
          }
        ]
      }
    ]
  }
}
